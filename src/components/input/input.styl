.input
  &__field
    width 100%
    height 50px
    line-height 120%
    font-size 14px
    display block
    outline none
    color #323232
    text-transform uppercase
    border-radius 100px
    border 1px solid #FFDE59
    background rgba(255, 255, 255, 1)
    font-family inherit
    font-weight 400
    padding 0 10px 0 18px
    transition 0.3s

    +above($breakpoints.sm)
      height 42px
      font-size 13px

    +above($breakpoints.md)
      font-size 14px
      height 46px

    +above($breakpoints.xxl)
      height 54px
      font-size 16px
      padding 0 10px 0 24px

    &:-webkit-autofill,
    &:-webkit-autofill:hover,
    &:-webkit-autofill:focus,
    &:-webkit-autofill:active
      -webkit-box-shadow 0 0 0px 1000px white inset
      transition all 5000s ease-in-out 0s

    &::placeholder
      font-weight 400
      color rgba(50, 50, 50, 0.5)

    &.error
      color $color-error

      &::placeholder
        color $color-error

      &:-ms-input-placeholder
        color $color-error

      &::-ms-input-placeholder
        color $color-error

      animation shake 0.6s

    &:focus
      border 1px solid #c09a02

  &--textarea &__field
    resize none
    padding-top 15px

    +above($breakpoints.sm)
      padding-top 13px

    +above($breakpoints.md)
      padding-top 15px

    +above($breakpoints.xxl)
      padding-top 17px
