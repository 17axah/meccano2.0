.modal-form
  &__inner
    max-width 300px

    +above($breakpoints.sm)
      max-width 360px

    +above($breakpoints.xxl)
      max-width 426px

  &__close
    cursor pointer
    position absolute
    top 6px
    right 6px
    padding 5px

    +above($breakpoints.xxl)
      top 10px
      right 10px

  &__close-icon
    width 18px
    height 18px
    transition 0.3s
    background-image url('/src/images/icon-close-2.svg')
    background-repeat no-repeat
    background-position center
    background-size cover

    +above($breakpoints.sm)
      width 22px
      height 22px

    &:hover
      transform scale(1.3)

  &__inner
    border-radius 12px
    background linear-gradient(170deg, #fef6f3 0%, #DFDFDF 100%)
    color $color-grey-1
    padding 36px 10px 17px

    +above($breakpoints.sm)
      padding 32px 17px

    +above($breakpoints.xxl)
      padding 40px 32px

  &__info-title
    font-size 19px
    line-height normal
    margin 0 0 18px
    font-weight 700

    +above($breakpoints.sm)
      font-size 21px
      margin 0 0 20px

    +above($breakpoints.xxl)
      font-size 23px

    br
      display block

  &__feedback-item
    max-width 255px
    margin 0 auto

    +above($breakpoints.sm)
      max-width 280px

    +above($breakpoints.xxl)
      max-width 330px

  &__feedback-input
    height 50px
    margin-bottom 10px

    +above($breakpoints.sm)
      height 60px
      margin-bottom 10px

    +above($breakpoints.xxl)
      height 58px
      margin-bottom 14px

    .input
      height 100%

      &__field
        height 100%
        border none

  &__button
    margin-bottom 14px

    .btn
      height 50px

      +above($breakpoints.sm)
        height 60px

      +above($breakpoints.xxl)
        height 58px

  &__agree
    font-size 10px
    line-height 13px

    +above($breakpoints.sm)
      font-size 11px
      line-height 13px

    +above($breakpoints.md)
      font-size 12px
      line-height 14px

    +above($breakpoints.xxl)
      font-size 13px
      line-height 15px

    a
      text-decoration underline
